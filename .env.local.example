# Sanity CMS Configuration
# Get these from: https://sanity.io/manage → Select project → Settings → API
# IMPORTANT: projectId must contain ONLY lowercase letters (a-z), numbers (0-9), and dashes (-)
# Example: abc123xyz or my-project-123 (no quotes, no uppercase, no underscores)
NEXT_PUBLIC_SANITY_PROJECT_ID=your-sanity-project-id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01
SANITY_API_WRITE_TOKEN=your_sanity_write_token

# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/[project-id]/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# SendGrid Configuration for Email Automation
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@thousanddaysoflove.com
SENDGRID_FROM_NAME=Hel & Ylana - Mil Dias de Amor

# Mercado Pago Configuration for Brazilian Payments (PIX, Credit Card)
# Get credentials from: https://www.mercadopago.com.br/developers/panel/app
# Server-side keys (NEVER expose these to client):
MERCADO_PAGO_ACCESS_TOKEN=your_mercado_pago_access_token
MERCADO_PAGO_WEBHOOK_SECRET=your_webhook_secret
# Client-side public key (safe to expose, used for card tokenization in browser):
NEXT_PUBLIC_MERCADO_PAGO_PUBLIC_KEY=your_mercado_pago_public_key

# Wedding Configuration
WEDDING_DATE=2025-11-20
RSVP_DEADLINE=2025-11-01
ADMIN_EMAIL=hel@thousanddaysoflove.com
ADMIN_PASSWORD=secure_admin_password_change_me
GUEST_SHARED_PASSWORD=1000dias

# Website Configuration
NEXT_PUBLIC_SITE_URL=https://thousanddaysoflove.com
NEXT_PUBLIC_SITE_NAME=Mil Dias de Amor - Hel & Ylana
GOOGLE_MAPS_PLATFORM_API_KEY=your_google_maps_api_key

# Email Templates
SENDGRID_RSVP_CONFIRMATION_TEMPLATE_ID=d-your_rsvp_confirmation_template
SENDGRID_RSVP_REMINDER_TEMPLATE_ID=d-your_rsvp_reminder_template
SENDGRID_PAYMENT_CONFIRMATION_TEMPLATE_ID=d-your_payment_confirmation_template

# Brazilian Locale Settings
NEXT_PUBLIC_LOCALE=pt-BR
NEXT_PUBLIC_CURRENCY=BRL
NEXT_PUBLIC_TIMEZONE=America/Sao_Paulo

# Development/Testing
NODE_ENV=development
NEXT_PUBLIC_DEBUG=false

# Payment Configuration
# Minimum payment amount in BRL
# Production: 50 (recommended to avoid small test payments)
# Testing: 1 (allows R$1 test gifts for Mercado Pago integration testing)
# See docs/PAYMENT_CONFIG.md for details
NEXT_PUBLIC_MIN_PAYMENT_AMOUNT=50

# E2E Testing Configuration (Cloud Supabase)
# Tests run against Supabase Cloud - ensure test data exists
BASE_URL=http://localhost:3000